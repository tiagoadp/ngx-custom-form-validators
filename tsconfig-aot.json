{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
        "declaration": true,
        "rootDir": "./app",
        "outDir": "./bundles",
        "lib": ["dom", "es2016"]
    },
    "angularCompilerOptions": {
        "genDir": "aot",
        "strictMetadataEmit": true
    },
    "files": [
        "app/custom-validator.ts"
    ],
    "exclude": [
        "node_modules",
        "bundles",
        "demo",
        "test"
    ]
}
